{% extends 'base_homepage.html.twig' %}

{% block title %}SucessStory index{% endblock %}

{% block body %}
    <h1>SucessStory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Lien</th>
                <th>Date</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sucess_story in sucess_stories %}
            <tr>
                <td>{{ sucess_story.id }}</td>
                <td>{{ sucess_story.nom }}</td>
                <td>{{ sucess_story.description }}</td>
                <td>{{ sucess_story.lien }}</td>
                <td>{{ sucess_story.date ? sucess_story.date|date('Y-m-d') : '' }}</td>
                <td>{{ sucess_story.photo }}</td>
                <td>
                    <a href="{{ path('sucess_story_show', {'id': sucess_story.id}) }}">show</a>
                    <a href="{{ path('sucess_story_edit', {'id': sucess_story.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sucess_story_new') }}">Create new</a>
{% endblock %}
