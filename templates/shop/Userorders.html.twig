<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="page-header">
                <h1><small class="pull-right"></small> Mes commandes </h1>
            </div>
            <div class="comments-list">
                {% for orders in orders %}
                <div class="media">
                    <p class="pull-right"><small>{{ orders.status }}</small></p>
                    <p class="pull-right"><small>{{ orders.shipping }}</small></p>
                  <a href="{{ path('PdfOrder',{'id':orders.id}) }}" > <button class="btn btn-primary">Imprimer cotre commande</button></a>
                    <div class="media-body">
<h3>Produits</h3>
                        <p class="media-heading user_name"> {{ orders.products }} </p>


                        <p><small>Addresse: {{ orders.address }}</small></p>
                    </div>
                </div>
                {% endfor %}

            </div>



        </div>
    </div>
</div>

{% endblock %}