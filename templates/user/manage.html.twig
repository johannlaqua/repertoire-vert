{% extends 'base_homepage.html.twig' %}



{% block body %}
    <div class="green-banner">
        <h3>Gestion des Utilisateurs</h3>
    </div>
    <div class="row">
        <a class="btn" href="{{ url('userAdminAdd') }}">Ajouter un admin</a>
    </div>
    <table>
        <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Email Valid√©e</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>{% if  user.emailValidated == true %}
                        Oui
                    {% else %}
                        Non
                    {% endif %}
                </td>
                <td>
                    {% if user.role=="ROLE_ADMIN" and  user.username != app.user.username %}
                        <a href="{{ url('userAdminDelete',{id:user.id}) }}">Supprimer</a>
                    {% else %}
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}