{% extends 'base_homepage.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ person.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ person.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ person.role }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ person.token }}</td>
            </tr>
            <tr>
                <th>EmailValidated</th>
                <td>{{ person.emailValidated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Actived</th>
                <td>{{ person.actived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Inscriptiondate</th>
                <td>{{ person.inscriptiondate ? person.inscriptiondate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Connected</th>
                <td>{{ person.connected ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ person.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ person.lastname }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ person.street }}</td>
            </tr>
            <tr>
                <th>Streetnumber</th>
                <td>{{ person.streetnumber }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ person.postcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ person.city }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ person.region }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ person.country }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ person.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person1_index') }}">back to list</a>

    <a href="{{ path('person1_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
