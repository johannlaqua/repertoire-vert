{% extends 'base_homepage.html.twig' %}



{% block body %}
    {# ******************************* NavBar ***************************************** #}


    <div class="showcase"  style="width:100%;background-image: url({{asset('/images/header_entreprise.png')}}); height: 100%;background-position:center ; background-size: cover ; background-repeat: no-repeat ">
        {% include "navbar.html.twig" %}
        <h3 class="banner-title">Mon profil entreprise</h3>
        <br><br><br><br><br>
        <div class="showcase__btn">
            <button  onclick="location.href='/profile/entreprise'" class="showcase__btn-ville">Profil</button>
            <button onclick="location.href='/parametres/particulier'" class="showcase__btn-ville">Paramètres</button>
            <button onclick="location.href='/productsFavParticulier'" class="showcase__btn-ville" style="font-size: 16px">Produits/services favoris</button>
            <button onclick="location.href='/MesEvenementsFavoris'" class="showcase__btn-entreprise" style="font-size: 16px">Evènements favoris</button>

        </div>
    </div>
    {# ******************************* FinNavBar ***************************************** #}


    <div class="card-container col-l-12" style="padding-right:30px; padding-left:30px;"><!--style="display:flex; flex-direction:row; flex-wrap: wrap;"-->
         {% if events is empty %}
            <div class="col-l-12 col-m-12 col-s-12">
                <div style="margin: 20px 20px 20px 20px; text-align:center;">
                    <p>Aucun évenement en favoris</p>
                </div>

            </div>
        {% else %}
            {% for event in events %}
                <a href="{{ url('event_show',{'id':event.id}) }}" style="max-width:200px; text-decoration:none;margin:10px;">
                    <div class="product-card card">
                        <div class="card-header">
                            <img class="card-image" src="{{ asset('css/img/event/'~ event.image|basename) }}">
                            <span class="card-title">Nom: {{ event.name  }}</span>
                        </div>
                        <div class="card-header">

                            <span class="card-title">Lieu: {{ event.place  }}</span>
                            <br>
                            <p>{{ event.startingdate|date('d M y') }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}
