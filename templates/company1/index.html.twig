{% extends 'base_homepage.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Username</th>
                <th>Email</th>
               
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                
                <td>{{ company.username }}</td>
                <td>{{ company.email }}</td>
                
                <td>
                    <a href="{{ path('company1_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company1_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="35">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company1_new') }}">Create new</a>
{% endblock %}
