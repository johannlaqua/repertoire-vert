{% extends 'base_homepage.html.twig' %}
{% block body %}
    <div class="title-banner-container" style="background-image: url({{asset('images/nouveautes.png')}})">
        {% include "navbar.html.twig" %}
        <h3 class="banner-title">Résultat de la recherche - Produits/Services</h3>
    </div>

    <div>
    {% if products is empty %}
    <div class="col-l-12 col-m-12 col-s-12">
        <div style="margin: 20px 20px 20px 20px; text-align:center;">
            <p>Aucun résultat trouvé</p>
        </div>
    </div>
    {% else %}

        <div class="card-container col-l-12" style="padding-right:30px; padding-left:30px;"><!-- style="display:flex; flex-direction:row; flex-wrap: wrap;"-->
        {% for product in products %}
            <a href="{{ url('productShow',{'slug':product.slug}) }}" style="max-width:200px; text-decoration:none">
                <div class="product-card card">
                    <div class="card-header">
                        <img class="card-image" src="{{ asset('css/img/product/'~ product.image|basename) }}">
                        <span class="card-title">Nom:   {{ product.name }}</span>
                    </div>
                    <div class="card-content">
                        <p>Description:   {{ product.description }}</p>
                    </div>
                </div>
            </a>
        {% endfor %}
        </div>
        </div>

    {% endif %}




<div>
    <form style="margin-bottom:30px; text-align:center;" action="/?#categories">
        <button style="background-color:green; border-radius:30px; color:white; font-size:120%; cursor:pointer"> Retour </button>
    </form>

</div>
{% endblock %}