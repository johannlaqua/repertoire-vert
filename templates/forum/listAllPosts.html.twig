                <label for="Communautés">Communautés</label>
                <input type="radio" value="Green building" id="Green-building" name="secteur-activité"/>
                <label for="Green-building">Green building</label>
                <input type="radio" value="Médias et communication" id="Médias et communication" name="secteur-activité"/>
                <label for="Médias et communication">Médias et communication</label>

            </div>
        </div>

        <div class="choix-secteur">
            Saisir le produit/entreprise
        </div>

        <div class="container-searchbar">
            <input class="searchbar-produits" type="text"/>
            <button class="icon-loupe">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 17.501 17.505"><defs><style>.b{fill:#fff;}</style></defs><path class="b" d="M216.8,101.685v-.957c.022-.145.045-.29.065-.435a6.848,6.848,0,0,1,4.576-5.553,6.57,6.57,0,0,1,3.716-.192,6.657,6.657,0,0,1,4.48,3.407,6.584,6.584,0,0,1,.336,5.782c-.135.342-.312.668-.485,1.034a1.415,1.415,0,0,1,.146.115c1.3,1.3,2.6,2.6,3.906,3.9a2.223,2.223,0,0,1,.762,1.274v.342a.877.877,0,0,0-.028.1,1.632,1.632,0,0,1-.6,1.013,1.935,1.935,0,0,1-.846.361h-.342a2.2,2.2,0,0,1-1.263-.75c-1.3-1.315-2.616-2.621-3.925-3.929-.047-.047-.1-.092-.141-.134l-.136.072a6.6,6.6,0,0,1-6.61.088,6.672,6.672,0,0,1-3.542-5.012C216.843,102.032,216.824,101.858,216.8,101.685Zm11.484-.476a4.648,4.648,0,1,0-4.659,4.646A4.664,4.664,0,0,0,228.284,101.209Z" transform="translate(-216.8 -94.365)"/></svg>
            </button>
        </div>

        <div class="boutton-poster">
            <input type="checkbox" id="poster" value="poster"/>
            <label class="label-poster" for="poster">Poster</label>

            <div class="popup-poster">
                <div class="photo-left">
                    Photo
                </div>
                <div class="right-choix-post">
                    <div class="post-data">
                        <label class="label-categorie-post" for="categorie-post">Catégorie</label>
                        <input placeholder="Catégorie du post" type="text" id="categorie-post"/>
                    </div>
                    <div class="post-data">
                        <label class="label-titre-post" for="titre-post">Titre</label>
                        <input placeholder="Votre Titre ..."  type="text" id="titre-post"/>
                    </div>
                    <div class="post-data">
                        <label class="label-texte-post" for="texte-post">Texte</label>
                        <input placeholder="Votre texte ..." type="text" id="texte-post"/>
                    </div>
                </div>

                <div class="boutton-valider-poster">
                    <button>Valider</button>
                </div>
            </div>
        </div>



        <!-- #######################################################-->
        <!-- Partie des POSTS-->
        <!-- #######################################################-->
        <div class="container-posts">

            <div class="secteur-activité">
                <div class="titre-choix-secteur">Choisir le Secteur d'activité</div>
                <span>Vous êtes :</span>
                <input id="Entreprises" type="radio" value="Entreprises" name="secteur"/>
                <label for="Entreprises">Entreprises</label>
                <input id="Individus" type="radio" value="Individus" name="secteur"/>
                <label for="Individus">Individus</label>
                <input  id="Ville/Région" type="radio" value="Ville/Région"name="secteur"/>
                <label for="Ville/Région">Ville/Région</label>
            </div>
            <table class="tableau-posts">
                <thead>
                <th class="th-Pseudo">Pseudo</th>
                <th class="th-Sujet">Sujet</th>
                <th class="th-Rep">Rép</th>
                </thead>
                <tbody>




                    {% for post in allPosts %}
                        <tr>
                            <td class="td-pseudo">
                                <div class="data">
                                    <div class="icon-pseudo">
                                            <svg src="http://www.w3.org/2000/svg" width="20%" height="auto" viewBox="0 0 23.119 28.24"><g transform="translate(-766.676 -2337.937)"><circle cx="6.66" cy="6.66" r="6.66" transform="matrix(0.299, -0.954, 0.954, 0.299, 769.887, 2350.648)" fill="#618226"/><path d="M230.355,131.932a7.622,7.622,0,0,1,1.59.2c3.364.531,5.569,4.812,5.569,9.394H214.395c0-4.974,2.6-9.595,7.159-9.595Z" transform="translate(552.281 2224.65)" fill="#618226"/></g></svg>
                                    </div>
                                    <div class="username-div">{{ post.creator.username }}</div>

                                </div>

                            </td>
                            <td class="td-sujet">
                                <div class="data">
                                    <div class="sujet-body">


                                        {{ post.body }}
                                    </div>
                                    <div class="date_post">
                                        <div class="date-crea">


                                            {{ post.createdAt|date('d-m-Y') }}

                                        </div>
                                        <div class="lien-poster"><a href="#">Poster</a></div>
                                    </div>
                                    <div class="container-fleche">
                                        <svg class="fleche-haute" xmlns="http://www.w3.org/2000/svg" width="15" height="23" viewBox="0 0 15 23"><g transform="translate(18930.781 20794)"><path d="M7.5,0,15,10H0Z" transform="translate(-18930.781 -20794)"/><rect width="3" height="17" transform="translate(-18924.781 -20788)"/></g></svg>
                                    </div>
                                </div>
                            </td>
                            <td class="td-rep">
                                <div class="data">5</div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


                </tbody>
            </table>
        </div>

    <div class="container-container-cards">
        <div class="container-cards">
            <div class="card-vide"></div>
            <div class="card-vide"></div>
            <div class="card-vide"></div>
        </div>
    </div>

    </div>
