                <input type="radio" value="Produits ménagers" id="Produits ménagers" name="secteur-activité"/>
                <label for="Produits ménagers">Produits ménagers</label>
                <input type="radio" value="Art et design" id="Art-et-design" name="secteur-activité"/>
                <label for="Art-et-design">Art et design</label>
                <input type="radio" value="Environnement" id="Environnement" name="secteur-activité"/>
                <label for="Environnement">Environnement</label>
                <input type="radio" value="Labels" id="Labels" name="secteur-activité"/>
                <label for="Labels">Labels</label>
                <input type="radio" value="Soin et beauté du corps" id="Soin et beauté du corps" name="secteur-activité"/>
                <label for="Soin et beauté du corps">Soin et beauté du corps</label>
                <input type="radio" value="Artisanat" id="Artisanat" name="secteur-activité"/>
                <label for="Artisanat">Artisanat</label>
