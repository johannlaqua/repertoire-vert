{% extends 'base_homepage.html.twig' %}



{% block body %}
    <div class="green-banner">
        <h3>Gestion des Cat√©gories</h3>
    </div>
    <div class="row">
        <a class="btn" href="{{ url('categoryAdd') }}">Ajouter d'une categorie</a>
    </div>
    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
